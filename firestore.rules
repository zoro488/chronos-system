rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Clientes collection
    match /clientes/{clienteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Productos collection
    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Inventario collection
    match /inventario/{movimientoId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Distribuidores collection
    match /distribuidores/{distribuidorId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Reportes collection
    match /reportes/{reporteId} {
      allow read: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Ventas collection
    match /ventas/{ventaId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Compras collection
    match /compras/{compraId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Movimientos Bancarios collection
    match /movimientosBancarios/{movimientoId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
    }
    
    // Bancos collection
    match /bancos/{bancoId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Usuarios collection
    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Configuracion collection
    match /configuracion/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
