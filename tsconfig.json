{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@stores/*": ["./stores/*"],
      "@lib/*": ["./lib/*"]
    }
  },
  "include": [
    "src",
    "components",
    "pages",
    "services",
    "hooks",
    "utils",
    "types",
    "stores",
    "lib",
    "App.tsx",
    "forms",
    "schemas",
    "config",
    "constants",
    "brand"
  ],
  "exclude": ["node_modules", "dist", "build", "schemas"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
