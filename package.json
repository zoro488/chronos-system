{
  "name": "chronos-system",
  "version": "1.0.0",
  "description": "CHRONOS System - Complete business management platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "firebase": "^10.0.0",
    "lucide-react": "^0.554.0",
    "postcss": "^8.5.6",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.0",
    "tailwindcss": "^4.1.17",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^4.13.3",
    "@pinecone-database/pinecone": "^6.1.3",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "chromadb": "^3.1.5",
    "clsx": "^2.1.1",
    "cohere-ai": "^7.19.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "framer-motion": "^12.23.24",
    "jsdom": "^26.1.0",
    "langchain": "^1.0.5",
    "openai": "^6.9.1",
    "prettier": "^3.1.0",
    "replicate": "^1.4.0",
    "tailwind-merge": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zoro488/chronos-system.git"
  },
  "keywords": [
    "business-management",
    "erp",
    "inventory",
    "sales",
    "purchases",
    "banking",
    "firebase",
    "react",
    "typescript"
  ],
  "author": "zoro488",
  "license": "MIT"
}
